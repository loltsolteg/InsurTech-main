<div class="container">
    
    <div class="card card-body">

        <div class="container">

            <h3 class="text-danger text-center">Create Rewards</h3>
            <h5 style="display: inline-block;">Reward</h5>

            <form action="/rewards/admin/adminCreateRewards" method="post" id="createForm">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" name="title" required>
                        </div>
                        <div class="col">
                            <label for="price">Price</label>
                            <input type="text" class="form-control" name="price" required>
                        </div>
                    </div>
                    
                    <div class ='row'>
                        <div class="col">
                        <label for="points">Points</label>
                        <input type="text" class="form-control" name="points" required>
                    </div>

                    <div class="col">
                        <label for="category">Category</label>
                        <br>
                        <select name="category">
                            <br>
                            <option value="Food">Food</option>
                            <option value="Travel">Travel</option>
                            <option value="Lifestyle">Lifestyle</option>
                            <option value="Equipment">Equipment</option>
                        </select>
                    </div>
                    </div>
                    <br>
                    <button id="butAddMeal" type="submit" class="btn btn-danger">Add New
                    </button>
                    
            </form>

        </div>
    </div>
</div>

